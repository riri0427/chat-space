.side-bar
  
  = render 'layouts/side_bar'

.chat
  .chat-header
    .left-header
      .current-group 
        = @group.name
      %ul.member-list
        Member :
        - @group.users.each do |user|
          %li.member
            = user.name
      .right-header
        Edit
  .messages
    =render @messages
  .form
    = form_for [@group, @message], :url => {action: :create}, :html => {class: "new-message"} do |f|
      .form-message
        = f.text_field :content, class: "form-message__text", placeholder: "type a message"
        .file-upload
          = f.label :image, class: "file-relation", for: "file-image" do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, id: "file-image", class: "hidden"
      .form-btn
        = f.submit 'Send', class: "form-btn__btn"
